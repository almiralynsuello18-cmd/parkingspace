<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_bg">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_logout_key"
        android:contentDescription="Log Out Icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="16dp"
        app:tint="#1C0E9A"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Log Out"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to end your Admin session?"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No, Stay"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="#1C0E9A"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/rounded_outline_bg"
            app:cornerRadius="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_confirm_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes, Log Out"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#1C0E9A"
            app:cornerRadius="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>