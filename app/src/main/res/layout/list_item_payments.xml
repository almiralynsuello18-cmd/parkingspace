<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="10dp"       app:cardElevation="2dp"        app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayesha Bless"
                android:textSize="12sp"
                android:textColor="#4863F7"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚±100"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GCash"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_payment_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Oct 22, 2025"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_payment_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paid"
            android:textSize="12sp"
            android:textColor="#388E3C"
            android:background="@drawable/rounded_outline_grn_gb"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>