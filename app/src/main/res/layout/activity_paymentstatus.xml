<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    tools:context=".PaymentSuccessActivity">

    <ImageView
        android:id="@+id/iv_success_check"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/checklogo"
        android:contentDescription="Success Checkmark"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful!"
        android:textColor="#4CAF50"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your parking slot has been confirmed."
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_white_card_bg"
        android:elevation="8dp"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <LinearLayout style="@style/BookingSummaryRow">
            <TextView style="@style/BookingSummaryLabel" android:text="Slot"
                tools:ignore="HardcodedText" />
            <TextView style="@style/BookingSummaryValue" android:text="12"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout style="@style/BookingSummaryRow">
            <TextView style="@style/BookingSummaryLabel" android:text="Date"
                tools:ignore="HardcodedText" />
            <TextView style="@style/BookingSummaryValue" android:text="Oct, 22"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout style="@style/BookingSummaryRow">
            <TextView style="@style/BookingSummaryLabel" android:text="Time"
                tools:ignore="HardcodedText" />
            <TextView style="@style/BookingSummaryValue" android:text="9:00 - 11:00 AM"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout style="@style/BookingSummaryRow">
            <TextView style="@style/BookingSummaryLabel" android:text="Duration"
                tools:ignore="HardcodedText" />
            <TextView style="@style/BookingSummaryValue" android:text="2 hours"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_view_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Booking"
            android:textColor="@android:color/white"
            android:backgroundTint="#3B41A5"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>