<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".BookParkingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#1C0E9A"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Parking"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/rounded_white_card_bg"
        android:padding="24dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Oct 22"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="16dp"
            tools:ignore="Autofill,HardcodedText,KeyboardInaccessibleWidget" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="9:00 AM"
            android:inputType="time"
            android:focusable="false"
            android:clickable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText,KeyboardInaccessibleWidget" />

        <Button
            android:id="@+id/btn_search_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Slots"
            android:textColor="@android:color/white"
            android:backgroundTint="#1C0E9A"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Slots: 11/25\n(Oct 22, 9:00 AM)"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/ll_parking_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_menu_item_bg"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plogo"
                    android:contentDescription="Parking Icon"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot 1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Book"
                    android:textSize="12sp"
                    android:textColor="#3B41A5"
                    android:backgroundTint="#F0F0F0"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#1C0E9A"
                    app:strokeWidth="1dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_menu_item_bg"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plogo"
                    android:contentDescription="Parking Icon"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot 2"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Book"
                    android:textSize="12sp"
                    android:textColor="#1C0E9A"
                    android:backgroundTint="#F0F0F0"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#1C0E9A"
                    app:strokeWidth="1dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_menu_item_bg"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plogo"
                    android:contentDescription="Parking Icon"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot 3"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Book"
                    android:textSize="12sp"
                    android:textColor="#1C0E9A"
                    android:backgroundTint="#F0F0F0"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#1C0E9A"
                    app:strokeWidth="1dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_menu_item_bg">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plogo"
                    android:contentDescription="Parking Icon"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot 4"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Book"
                    android:textSize="12sp"
                    android:textColor="#1C0E9A"
                    android:backgroundTint="#F0F0F0"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#1C0E9A"
                    app:strokeWidth="1dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>